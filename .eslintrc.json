{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    // "prettier/prettier": [
    //   "error",
    //   {
    //     "endOfLine": "auto"
    //   }
    // ],
    // "prettier/prettier": [
    //   "warn",
    //   {
    //     "arrowParens": "always",
    //     "semi": false,
    //     "trailingComma": "none",
    //     "tabWidth": 2,
    //     "endOfLine": "auto",
    //     "useTabs": false,
    //     "singleQuote": true,
    //     "printWidth": 120,
    //     "jsxSingleQuote": true
    //   }
    // ],
    "prettier/prettier": 0,
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-props-no-spreading": [
      1,
      {
        "custom": "ignore"
      }
    ],
    "react/jsx-curly-spacing": [2, "never"],
    "default-param-last": "off",
    "react/display-name": "off"
  },
  "settings": { 
    "react": {
      "version": "detect"
    },
    "import/resolver": { "node": { "paths": ["src"] } } 
  }
}
